server:
  port: 9091
  
spring:
  application:
    name: API-GATEWAY
    
  cloud:
    gateway:
      routes:
      - id: USER-SERVICE
        uri: lb://USER-SERVICE
        predicates:
        - Path=/api/v1/**
        
      - id: HOTEL-SERVICE
        uri: lb://HOTEL-SERVICE
        predicates:
        - Path=/api/**
       
      - id: RATING-SERVICE
        uri: lb://RATING-SERVICE
        predicates:
        - Path=/ratings/**
        
        filters:
            - name: CircuitBreaker
              args:
                name: ratingHotelBreaker
#                fallbackUri: forward:/orderServiceFallBack
    
eureka:
  instance:
    prefer-ip-address: true
    hostname: localhost 
  client:
    fetch-registry: true
    register-with-eureka: true
    service-url:
      defaultZone : http://localhost:8761/eureka
      